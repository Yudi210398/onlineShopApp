        <div class="container">
        <main class="list">
            <br>
            <h1 class="display-5"><%= produk.namaProduk %></h1>
            <hr />
            <div>
            <img src="<%= produk.gambarProduk %> " alt="" width="250px" height="300px" />
            </div>
            <br />
            <p class="deskripsi"><%= produk.deskripsi%></p>
            <br /><br />
            <div class="tombol">
            <button class="btn btn-outline-primary">Rp. <%= produk.hargaProduk %></button>
