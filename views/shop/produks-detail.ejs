                <form action="/admin/hapus-produks" method="POST">
                    <input type="hidden" name="id" value="<%= produk.id %>" />
                    <button class="btn btn-outline-danger" type="submit ">
                        Hapus Produk
                    </button>
                </form>
            <% } else {%>  <%- include('../includes/add-list-cart.ejs') %> <%} %>
    
            </div>
        </main> 
