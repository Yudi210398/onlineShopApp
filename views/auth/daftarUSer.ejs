<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/admin-produks.css" />
</head>
<%- include('../includes/nav.ejs') %>
<br />
<br />
<div class="container">
    <div class="row justify-content-center"> 
        <div class="col-5">
            <% if (pesan) { %>
                <div class="alert alert-danger" role="alert">
                    <h1>Email Sudah Terdaftar, Gunakan email lain </h1>
                </div>
            <% } %>
            <form action="/daftar" method="POST">
                <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required placeholder="Masukan email">
                </div>
                <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" name="passdaftar" required placeholder="Masukan Password" class="form-control" id="pass1">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Masukan Ulang Password</label>
                    <input type="password" name="passulang" required placeholder="Masukan Ulang Password" class="form-control" id="pass2">
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary">Daftar</button>
            </form>
            </div>
            </div>
</div>

<%- include('../includes/end.ejs') %>
