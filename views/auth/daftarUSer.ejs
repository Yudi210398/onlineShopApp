<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/admin-produks.css" />
</head>
<%- include('../includes/nav.ejs') %>
<br />
<br />
<div class="container">
    <div class="row justify-content-center"> 
        <div class="col-5">
            <% if (datass) { %>
                <div class="alert alert-danger" role="alert">
                    <h1><%= datass %> </h1>
                </div>
            <% } %>

            <% if (pesan2 === `emailSama`) { %>
                <div class="alert alert-danger" role="alert">
                    <h1> Email sudah terdaftar </h1>
                </div>
            <% } %>
            <form action="/daftar" method="POST" novalidate>
                <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control  <%= border.find(e => e.param === 'email') ? 'bordermerah' : '' %>" id="email" name="email" required placeholder="Masukan email" value="<%= inputLama.email %> ">
                </div>
                <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" name="passdaftar" required placeholder="Masukan Password" class="form-control  <%= border.find(e => e.param === 'passdaftar') ? 'bordermerah' : '' %>" id="pass1" value="<%= inputLama.password %>">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Masukan Ulang Password</label>
                    <input type="password" name="passulang" required placeholder="Masukan Ulang Password" class="form-control <%= border.find(e => e.param === 'passulang') ? 'bordermerah' : '' %>" id="pass2" value="<%= inputLama.confrimPass %>">
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary">Daftar</button>
            </form>
            </div>
            </div>
</div>

<%- include('../includes/end.ejs') %>
