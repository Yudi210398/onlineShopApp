<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css" />
</head>
<%- include('../includes/nav.ejs') %>
<main>
  <div class="container">
    <div class="row justify-content-start"> 
      <div class="col-4">
        <form action="/admin/data" method="POST">
          <input
            type="text"
            class="form-control"
            name="Nama Produk"
            placeholder="Masukan Nama Produk"
            id="namaProduk"
            required
          />
 
          <input
            type="text"
            class="form-control"
            name="Gambar Produk"
            placeholder="Masukan Gambar url"
            id="gambarProduk"
            required
          />

          <input
            type="number"
            min="50"
            class="form-control"
            name="Harga Produk"
            placeholder="Masukan harga produk"
            id="hargaProduk"
            required
          />

          <div class="form-control">
            <textarea
              placeholder="Masukan Deskripsi"
              name="deskripsi"
              id="deskripsi"
              cols="40"
              rows="5"
              required
            ></textarea>
          </div>

          <button type="submit" class="btn btn-success">Submits</button>
        </form>
      </div>
    </div>
  </div>
</main>
<%- include('../includes/end.ejs') %>
